<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Text" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontStyle" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
        <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
    </Style>

    <Style x:Key="SubHeader" BasedOn="{StaticResource Text}" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
    </Style>

    <Style x:Key="Header" BasedOn="{StaticResource Text}" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="Text_Big" BasedOn="{StaticResource Text}" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="40"/>
    </Style>

    <Style x:Key="SubHeader_Big" BasedOn="{StaticResource SubHeader}" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="48"/>
    </Style>

    <Style x:Key="Header_Big" BasedOn="{StaticResource Header}" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="56"/>
    </Style>

</ResourceDictionary>