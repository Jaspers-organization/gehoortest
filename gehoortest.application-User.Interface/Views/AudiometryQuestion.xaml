<UserControl x:Class="gehoortest.application_User.Interface.Views.AudiometryQuestion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gehoortest.application_User.Interface.Views"
             mc:Ignorable="d" 
             Height="650" Width="500">
    <Border CornerRadius="40" Background="white" Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="1"  Color="#dcdcdc"/>
        </Border.Effect>
        <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Background="LightGray">
                        <Button Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Height="80" FontSize="20" Command="{Binding MakeSoundCommand}" Background="Transparent" BorderThickness="0">
                            <Image Source="/gehoortest.application-User.Interface;component/Assets/Images/play.png" Width="70" Height="70"/>
                        </Button>
                    </Grid>
                    <TextBlock Grid.Row="1" HorizontalAlignment="Center"  >Druk op play om het geluid te herhalen.</TextBlock>
                </Grid>


                <TextBlock Grid.Row="1" HorizontalAlignment="Center" Margin="0 40 0 0">Heeft u het geluid gehoord?</TextBlock>
                <Button Grid.Row="1" Style="{StaticResource SecondaryButton}" Content="Ja" Height="50" Width="200" VerticalAlignment="Bottom" HorizontalAlignment="Left" Command="{Binding SaveAudioQuestionCommand}" CommandParameter="true"/>
                <Button Grid.Row="1" Style="{StaticResource SecondaryButton}" Content="Nee" Height="50" Width="200" VerticalAlignment="Bottom" HorizontalAlignment="Right" Command="{Binding SaveAudioQuestionCommand}" CommandParameter="false"/>
            </Grid>
        </Border>
</UserControl>

    